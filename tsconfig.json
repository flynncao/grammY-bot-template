{
  "compilerOptions": {
    "target": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "#root/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "noEmit": false,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true
  },
  "include": [
    "src/**/*"
  ]
}
